<li id="entry-<%= entry.id %>">
  <span class="content"><%= link_to entry.titulo, entry %></span><br>
  <span class="content"><%= entry.bajada %></span>
  <span class="content"><%= truncate(entry.cuerpo, :length => 500) %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(entry.created_at) %> ago.
  </span>
</li>
