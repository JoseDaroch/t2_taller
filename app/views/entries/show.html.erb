<header class="intro">
  <div class="intro-body">
      <div class="container">
          <div class="row">
                <div class="col-md-6 col-md-offset-3 col-lg-5">
                  <h2> <%= @entry.titulo %> </h2>
                </div>

                <div class="col-md-9">
                  <div class="scroll-area-entries-bajada">
                    <h5>
                      <%= @entry.bajada %><br><br><br>
                    </h5>
                  </div>
                </div>

                <div class="col-md-9">
                  <div class="scroll-area-entries-cuerpo">
                    <h5>
                      <%= @entry.cuerpo %><br><br><br>
                    </h5>
                  </div>
                </div>

                <h5>Publicada:
                  <%= @entry.created_at %><br>
                </h5>

                <div class="col-md-6 col-md-offset-4 col-lg-5">
                  <% if current_user.try(:admin?) %>
                    <%= link_to 'Edit', edit_entry_path(@entry.id), class: "btn btn-default btn-lg" %>
                    <%= link_to "Delete", @entry, method: :delete, data: {confirm: "Really delete this entry?"}, class: "btn btn-default btn-lg" %>
                  <% end %>
                  <br>
                </div>

                <div class="col-md-6 col-md-offset-3 col-lg-5">
                  <h2>Comentarios (<%= @comments.count %>)</h2>
                </div>

                <div class="col-md-9">
                  <div class="scroll-area-comments">

                    <h5>
                      <% @comments.each do |comment| %>
                          <ol class="microposts">
                            <li>
                              <span class="user"><%= comment.name %></span>:<br>
                              <span class="content"><%= comment.body %></span><br>
                              <span class="timestamp">
                                <a>
                                Posted <%= time_ago_in_words(comment.created_at) %> ago.
                                </a>
                              </span>
                            </li>
                          </ol>
                          <hr>
                      <% end %>
                    </h5>
                  </div>
                </div>

                <div class="col-md-6 col-md-offset-3 col-lg-5">
                    <h5>
                      <%= render 'comments/form' %>
                    </h5>
                </div>


              </div>
          </div>
        </div>
      </header>
